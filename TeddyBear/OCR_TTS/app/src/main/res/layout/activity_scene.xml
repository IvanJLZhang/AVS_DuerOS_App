<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grape_primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wistron.demo.tool.teddybear.scene.SceneActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/facePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/et_scene_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/list_selector_background_focused"
                android:gravity="center"
                android:maxLines="1"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_scene_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/list_selector_background_focused"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="top"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="3dp"
                android:scrollbars="vertical"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/btn_new_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_new_message"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/show_monitor_mode_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_monitor_mode"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/enable_wifi_direct_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_wifi_direct_mode"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/btn_scene_command_teddy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_command_teddy"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/btn_scene_command_alexa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_command_alexa"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/btn_scene_command_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_command_google"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

        <com.wistron.demo.tool.teddybear.scene.view.FlatButton
            android:id="@+id/btn_scene_command_baidu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/btn_title_command_baidu"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            flatui:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
            flatui:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:text="@string/news_api_rights" />

        <include
            layout="@layout/version_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>
