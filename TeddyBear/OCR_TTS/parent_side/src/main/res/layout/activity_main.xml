<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grape_primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/demo_group_title_pre_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_divider"
                android:gravity="center"
                android:text="@string/demo_title_pre_settings"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:stretchColumns="*">

                <TableRow>

                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_children_management"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/demo_title_children_management"
                        android:textAllCaps="false"
                        android:textSize="@dimen/main_activity_button_text_size"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea"
                        android:layout_span="2"/>

                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_bluetooth_setting"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:text="@string/demo_title_bluetooth_setting"
                        android:textAllCaps="false"
                        android:textSize="@dimen/main_activity_button_text_size"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea" android:layout_span="2"/>
                </TableRow>

                <TableRow>

                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_wifi_setting_p2p"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/demo_title_wifi_setting_p2p"
                        android:textAllCaps="false"
                        android:textSize="@dimen/main_activity_button_text_size"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea" android:layout_span="2"/>

                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_wifi_setting_bt"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:text="@string/demo_title_wifi_setting_bt"
                        android:textAllCaps="false"
                        android:textSize="@dimen/main_activity_button_text_size"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea" android:layout_span="2"/>
                </TableRow>

                <TableRow>
                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_avs"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="1dp"
                        android:text="@string/avs_login"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea" />
                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_baidu"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:text="@string/bd_login"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea" />
                    <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                        android:id="@+id/demo_item_notification_access"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:text="@string/demo_item_notification_access"
                        android:textAllCaps="false"
                        android:textSize="@dimen/main_activity_button_text_size"
                        app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                        app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height"
                        app:fl_theme="@array/sea" android:layout_span="2"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/demo_group_title_scenario_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_divider"
                android:gravity="center"
                android:text="@string/demo_title_scenario_settings"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                    android:id="@+id/demo_item_ocr_tts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="@string/demo_title_ocr_tts"
                    android:textAllCaps="false"
                    android:textSize="@dimen/main_activity_button_text_size"
                    app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                    app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

                <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                    android:id="@+id/demo_item_scene"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="@string/demo_title_scene"
                    android:textAllCaps="false"
                    android:textSize="@dimen/main_activity_button_text_size"
                    android:visibility="visible"
                    app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                    app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

                <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                    android:id="@+id/demo_item_enroll_speaker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="@string/demo_title_enroll_speaker"
                    android:textAllCaps="false"
                    android:textSize="@dimen/main_activity_button_text_size"
                    app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                    app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

                <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                    android:id="@+id/demo_item_monitor_mode"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/demo_title_monitor_mode"
                    android:textAllCaps="false"
                    android:textSize="@dimen/main_activity_button_text_size"
                    app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                    app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />

                <com.wistron.demo.tool.teddybear.parent_side.view.FlatButton
                    android:id="@+id/demo_item_light_bulb_control_mode"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="@string/demo_title_light_bulb_control"
                    android:textAllCaps="false"
                    android:textSize="@dimen/main_activity_button_text_size"
                    app:fl_blockButtonEffectHeight="@dimen/main_activity_button_effect_height"
                    app:fl_blockButtonRightEffectHeight="@dimen/main_activity_button_right_effect_height" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            layout="@layout/version_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>
